@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using Assignment3_PRN211.Models
@model Customer
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form asp-controller="Customer" asp-action="Update" method="post">
    <table>
        <tr>
            <td>CustomerID</td>
            <td><input type="text" asp-for=CustomerId value="@Model.CustomerId" readonly/></td>
        </tr>
        <tr>
            <td>CustomerName</td>
            <td><input type="text" asp-for=CustomerName value="@Model.CustomerName"/></td>
        </tr>
        <tr>
            <td>BirthDate</td>
            <td><input type="datetime" asp-for=Birthdate value="@Model.Birthdate"/></td>
        </tr>
        <tr>
        <td>Gender</td>
        @if (@Model.Gender == true)
        {
            <td>
                <input type="radio" asp-for=Gender value="true" checked/> Male
                <input type="radio" asp-for=Gender value="false" /> Female
            </td>
          
        }   
        else
            { 
                <td>
                <input type="radio" asp-for=Gender value="true" /> Male
                <input type="radio" asp-for=Gender value="false" checked/>  Female    
                </td>
            }
        </tr>
        <tr>
            <td>Address</td>
            <td><input type="text" asp-for=Address value="@Model.Address"/></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Update"/>
            </td>
        </tr>
    </table>
</form>