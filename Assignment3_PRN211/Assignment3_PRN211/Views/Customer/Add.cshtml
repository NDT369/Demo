@{
}
<form asp-controller="Customer" asp-action="Add" method="post">
    <table>
        <tr>
            <td>CustomerName</td>
            <td><input type="text" asp-for=CustomerName /></td>
        </tr>
        <tr>
            <td>BirthDate</td>
            <td><input type="datetime" asp-for=Birthdate /></td>
        </tr>
        <tr>
        <td>Gender</td>
            <td>
                <input type="radio" asp-for=Gender value="true" checked/> Male
                <input type="radio" asp-for=Gender value="false" /> Female
            </td>
        </tr>
        <tr>
            <td>Address</td>
            <td><input type="text" asp-for=Address /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Add"/>
            </td>
        </tr>
    </table>
</form>