@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using Assignment3_PRN211.Models
@model List<User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
List User:<br />
<button><a asp-controller="User" asp-action="Add">Add</a></button>
<table border="1">
    <tr>
        <th>Account</th>
        <th>Password</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Address</th>
    </tr>
    
        @foreach (var u in Model)
        {
            <tr>
            <td>@u.Account</td>
            <td>@u.Password</td>
            <td>@u.Name</td>
            @if(@u.Gender == true)
            {
                <td>Male</td>
            }
            else
            {
                <td>Female</td>
            }
            
            <td>@u.Address</td>
            <td><a asp-controller="User" asp-action="Update" asp-route-account =@u.Account>Update</a></td>
            <td><a asp-controller="User" asp-action="Delete" asp-route-account =@u.Account>Delete</a></td>
            </tr>
        }
    
</table>
