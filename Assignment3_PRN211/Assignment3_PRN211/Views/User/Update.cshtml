<form asp-controller="User" asp-action="Update" method="post">
    <table>
        <tr>
            <td>Account</td>
            <td><input type="text" asp-for=Account value="@Model.Account" readonly/></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="text" asp-for=Password value="@Model.Password"/></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><input type="texe" asp-for=Name value="@Model.Name"/></td>
        </tr>
        <tr>
        <td>Gender</td>
        @if (@Model.Gender == true)
        {
            <td>
                <input type="radio" asp-for=Gender value="true" checked/> Male
                <input type="radio" asp-for=Gender value="false" /> Female
            </td>
          
        }   
        else
            { 
                <td>
                <input type="radio" asp-for=Gender value="true" /> Male
                <input type="radio" asp-for=Gender value="false" checked/>  Female    
                </td>
            }
        </tr>
        <tr>
            <td>Address</td>
            <td><input type="text" asp-for=Address value="@Model.Address"/></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Update"/>
            </td>
        </tr>
    </table>
</form>