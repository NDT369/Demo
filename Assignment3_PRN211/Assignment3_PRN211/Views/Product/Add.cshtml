@{
}
<form asp-controller="Product" asp-action="Add" method="post">
    <table>
          <tr>
            <td>ProductName</td>
            <td><input type="text" asp-for=ProductName/></td>
        </tr>
          <tr>
            <td>Price</td>
            <td><input type="text"  asp-for=UnitPrice/></td>
        </tr>
          <tr>
            <td>UnitInStock</td>
            <td><input type="text" asp-for=UnitsInStock /></td>
        </tr>
          <tr>
            <td>CategoryId</td>
            <td><input type="text" asp-for=CategoryId /></td>
        </tr>
          <tr>
            <td>Image</td>
            <td><input type="text" asp-for=Image/></td>
        </tr>
          <tr>
            <td>Discontinued</td>
                <td>
                    <input type="radio" asp-for=Discontinued value="true" /> yes
                    <input type="radio"  asp-for=Discontinued value="false" /> no
                </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Add"/></td>
        </tr>
    </table>
</form>
