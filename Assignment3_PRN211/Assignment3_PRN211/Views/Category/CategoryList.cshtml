@{
}
<h1>Category</h1>
@if(@ViewBag.Mess != null)
{
   @ViewBag.Mess<br /> 
}
<br />
<button><a asp-controller="Category" asp-action="Add">Add</a></button>
<table border="1"> 
    <tr>
        <th>CategoryId</th>
        <th>CategoryName</th>
    </tr>
    @foreach(var c in Model){
    <tr>
        <td>@c.CategoryId</td>
        <td>@c.CategoryName</td>
        <td><a asp-controller="Category" asp-action="Update" asp-route-id =@c.CategoryId>Update</a></td>
        <td><a asp-controller="Category" asp-action="Delete" asp-route-id =@c.CategoryId>Delete</a></td>
    </tr>
    
    }
</table>